    <table class="table" id="example" >
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Document No")
                </th>
                <th>ContractNo</th>
                <th>Name</th>
                <th>
                    @Html.DisplayName("Date")
                </th>
                <th>
                    @Html.DisplayName("Document Type")
                </th>
                <th>
                    @Html.DisplayName("Description")
                </th>
                
                <th>
                    @Html.DisplayName("Filled")
                </th>
                <th>
                    @Html.DisplayName("Consumed")
                </th>
                <th>
                    @Html.DisplayName("Balance")
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
               
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].Document_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].CustomerContractNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].CustomerName)
                    </td>
                    <td>
                        
                        @Model[i].Date.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].document_type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].document_Description)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => Model[i].received)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].issued)

                    </td>
                    <td>@Html.DisplayFor(modelItem => Model[i].Actualbalance)
                    
                    </td>
                </tr>
            }
            </tbody>
    </table>


