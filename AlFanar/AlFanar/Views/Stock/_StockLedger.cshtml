<script type="text/javascript">
    $(document).ready(function () {
        $.noConflict();
        
        $('#example').DataTable({
            "ordering": false,
            "iDisplayLength": 100,
            dom: 'Bfrtip',

            buttons: [
                {
                    extend: 'pdf',
                    title: 'AL JABER KMS - Stock Ledger',

                },
                {
                    extend: 'excel',
                    title: 'AL JABER KMS - Stock Ledger',

                },
                {
                    extend: 'print',
