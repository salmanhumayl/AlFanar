@model IEnumerable<Services.Customer.CustomerViewModel>

@{
    ViewBag.Title = "List";
}


<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/buttons.dataTables.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script src="~/Scripts/DataTables/AJCDataTables/jquery.dataTables.min.js"></script>
<script src="~/Scripts/DataTables/AJCDataTables/dataTables.buttons.min.js"></script>
<script src="~/Scripts/DataTables/AJCDataTables/jszip.min.js"></script>
<script src="~/Scripts/DataTables/AJCDataTables/pdfmake.min.js"></script>
<script src="~/Scripts/DataTables/AJCDataTables/vfs_fonts.js"></script>
<script src="~/Scripts/DataTables/AJCDataTables/buttons.html5.min.js"></script>
<script src="~/Scripts/DataTables/AJCDataTables/buttons.print.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $.noConflict();
        $('#example').DataTable({
            "iDisplayLength": 100,
            dom: 'Bfrtip',

            buttons: [
                {
                    extend: 'pdf',
                    title: 'AL JABER KMS - Supplier List',
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4,5]
                    }

                },
                {
                    extend: 'excel',
                    title: 'AL JABER KMS - Supplier List',
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4,5]
                    }

                },
                {
                    extend: 'print',
                    title: 'AL JABER KMS - Supplier List',
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4,5]
                    }
                }
            ]
        });
    });
</script>




<h2>Customer</h2>

<p>
    @Html.ActionLink("Create New", "Add", null, new { @class = "btn btn-primary" })
</p>

<div class="alert alert-danger" role="alert">
    @Html.ValidationMessage("ErrorMsg")
</div>


<table class="table table-striped table-hover table-bordered table-condensed" id="example">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.ContractNo)
            </th>
            
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlatNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuildingNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TankName)
            </th>
            <th>Deposit</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.ContractNo)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlatNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BuildingNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TankName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deposit)
                </td>
                <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ContractNo })<span> | </span>
                        @Html.ActionLink("Delete", "Delete", new { id = item.ContractNo});
                </td>
            </tr>
        }
    </tbody>
</table>
