<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Item Issuance", "Index", "Pos")</li>
                    <li>@Html.ActionLink("Item Return (Direct)", "IssueReturn", "Pos")</li>
                    <li>@Html.ActionLink("Purchase", "Index", "Purchase")</li>
                    <li>@Html.ActionLink("Purchase Return", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Purchase Requisition", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Opening Balance", "OpeningBalance", "Item")</li>
                    <li>@Html.ActionLink("Stock Adjustment", "StockAdjustment", "Item")</li>
                    <li>@Html.ActionLink("Supplier", "List", "Supplier")</li>
                    <li>@Html.ActionLink("Quotation", "Index", "Quotation")</li>
                    <li>@Html.ActionLink("Item", "Index", "Item")</li>
                    <li>@Html.ActionLink("Category", "Index", "Item")</li>
                    <li>@Html.ActionLink("Tank", "Index", "Item")</li>
                    
                </ul>
            </div>
        </div>
    </div>
    <hr />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
           
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)


    <script>
        $(function () {
            $(".datepicker").datepicker(
                {
                    dateFormat: "dd/MM/yy",
                    showOn: "button",
                    buttonImage: "/Content/Images/Calendar1.png",
                    buttonImageOnly: true,
                    buttonText: "Select Date"
                });
        });


    </script>

</body>
</html>
